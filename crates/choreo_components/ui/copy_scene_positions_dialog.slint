import { ElevatedCard, MaterialText, TextButton, Vertical, Horizontal } from "@material";
import { Translations } from "translations.slint";

export component CopyScenePositionsDialogView inherits Rectangle {
    in property <string> title_text: Translations.copy_scene_positions_dialog_title;
    in property <string> scene_name;
    in property <string> message_text;
    in property <color> scene_color;
    in property <string> confirm_text: Translations.copy_scene_positions_dialog_confirm;
    in property <string> cancel_text: Translations.copy_scene_positions_dialog_cancel;

    callback confirm_copy();
    callback decline_copy();

    ElevatedCard {
        padding: 16px;
        Vertical {
            spacing: 12px;
            MaterialText { text: title_text; font-size: 18px; }
            Horizontal {
                spacing: 8px;
                Rectangle { width: 12px; height: 12px; border-radius: 6px; background: scene_color; }
                MaterialText { text: scene_name; }
            }
            MaterialText { text: message_text; }
            Horizontal {
                spacing: 8px;
                TextButton { text: cancel_text; clicked => { decline_copy(); } }
                TextButton { text: confirm_text; clicked => { confirm_copy(); } }
            }
        }
    }
}


