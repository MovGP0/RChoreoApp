import { ElevatedCard, MaterialText, MaterialTypography, TextButton, Vertical, Horizontal } from "@material";
import { Translations } from "translations.slint";

export component DeleteSceneDialogView inherits Rectangle {
    in property <string> title_text: Translations.delete_scene_dialog_title;
    in property <string> scene_name;
    in property <string> message_text;
    in property <color> scene_color;
    in property <string> confirm_text: Translations.delete_scene_dialog_yes;
    in property <string> cancel_text: Translations.delete_scene_dialog_no;

    callback confirm_delete();
    callback cancel();

    ElevatedCard {
        padding: 16px;
        Vertical {
            spacing: 12px;
            MaterialText {
                text: title_text;
                font-size: MaterialTypography.title_large.font_size;
                font-weight: MaterialTypography.title_large.font_weight;
            }
            Horizontal {
                spacing: 8px;
                Rectangle { width: 12px; height: 12px; border-radius: 6px; background: scene_color; }
                MaterialText {
                    text: scene_name;
                    font-size: MaterialTypography.body_medium.font_size;
                    font-weight: MaterialTypography.body_medium.font_weight;
                }
            }
            MaterialText {
                text: message_text;
                font-size: MaterialTypography.body_medium.font_size;
                font-weight: MaterialTypography.body_medium.font_weight;
            }
            Horizontal {
                spacing: 8px;
                TextButton { text: cancel_text; clicked => { cancel(); } }
                TextButton { text: confirm_text; clicked => { confirm_delete(); } }
            }
        }
    }
}


