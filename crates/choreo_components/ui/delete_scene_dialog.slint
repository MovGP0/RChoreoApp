import { ElevatedCard, MaterialText, TextButton, Vertical, Horizontal } from "@material";

export component DeleteSceneDialogView inherits Rectangle {
    in property <string> title_text;
    in property <string> scene_name;
    in property <string> message_text;
    in property <color> scene_color;
    in property <string> confirm_text;
    in property <string> cancel_text;

    callback confirm_delete();
    callback cancel();

    ElevatedCard {
        padding: 16px;
        Vertical {
            spacing: 12px;
            MaterialText { text: title_text; font-size: 18px; }
            Horizontal {
                spacing: 8px;
                Rectangle { width: 12px; height: 12px; border-radius: 6px; background: scene_color; }
                MaterialText { text: scene_name; }
            }
            MaterialText { text: message_text; }
            Horizontal {
                spacing: 8px;
                TextButton { text: cancel_text; clicked => { cancel(); } }
                TextButton { text: confirm_text; clicked => { confirm_delete(); } }
            }
        }
    }
}


