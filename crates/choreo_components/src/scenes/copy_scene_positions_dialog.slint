import {
    ElevatedCard,
    MaterialText,
    MaterialTypography,
    TextButton,
    Vertical,
    Horizontal,
    MaterialPalette
} from "@material";
import { Translations } from "../../ui/translations.slint";

export component CopyScenePositionsDialogView inherits Rectangle {
    in property <string> scene_name: "";
    in property <color> scene_color: MaterialPalette.transparent;

    property <string> title_text: Translations.copy_scene_positions_dialog_title;
    property <string> message_text: Translations.copy_scene_positions_dialog_message;
    property <string> confirm_text: Translations.copy_scene_positions_dialog_confirm;
    property <string> cancel_text: Translations.copy_scene_positions_dialog_cancel;

    callback confirm_copy();
    callback decline_copy();

    ElevatedCard {
        padding: 16px;
        Vertical {
            spacing: 12px;
            MaterialText {
                text: title_text;
                font-size: MaterialTypography.title_large.font_size;
                font-weight: MaterialTypography.title_large.font_weight;
            }
            Horizontal {
                spacing: 8px;
                Rectangle { width: 12px; height: 12px; border-radius: 6px; background: scene_color; }
                MaterialText {
                    text: scene_name;
                    font-size: MaterialTypography.body_medium.font_size;
                    font-weight: MaterialTypography.body_medium.font_weight;
                }
            }
            MaterialText {
                text: message_text;
                font-size: MaterialTypography.body_medium.font_size;
                font-weight: MaterialTypography.body_medium.font_weight;
            }
            Horizontal {
                spacing: 8px;
                TextButton { text: cancel_text; clicked => { decline_copy(); } }
                TextButton { text: confirm_text; clicked => { confirm_copy(); } }
            }
        }
    }
}
